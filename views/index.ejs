<!DOCTYPE html>
<html>
  <head>
    <title>CRUD of clients</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <link href="https://bootswatch.com/5/cyborg/bootstrap.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container">
      <h1>Client Listening</h1>
      <p>Clients already registered in system</p>
      <div id="alertSuccess" class="alert alert-success">
      </div>
      <div id="alertErro" class="alert alert-danger"></div>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <td>Name</td>
            <td>Age</td>
            <td>State</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if(!docs || docs.length == 0) {
            %> <tr>
              <td colspan="4">
                Nobody client registered.
              </td>
            </tr>
            <% 
          } else {
            docs.forEach(function(client) {
              %>
              <tr>
                <td>
                  <%=client.name%>
                </td>
                <td>
                  <%=client.age%>
                </td>
                <td>
                  <%=client.state%>
                </td>
                <td>
                  <a href="/edit/<%=client.idclient%>" class="btn btn-info">edit</a>
                  <a href="/delete/<%=client.idclient%>" class="btn btn-danger" onclick="return confirm('Are you sure?')">x</a>
                </td>
              </tr>
            <%})
          }%>
        </tbody>
      </table>
      <a href="/new" class="btn btn-primary">Register client</a>
    </div>
    <script src="/js/script-index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
